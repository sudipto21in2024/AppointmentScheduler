graph TD
    %% Main Layout
    A[Container: maxWidth="800px", padding="24px"] --> B[Flex: direction="row", gap="24px", responsive=true]
    
    %% Booking Form Section
    B --> C[Flex: direction="column", span=7]
    C --> D[Heading: level=1, text="Book Appointment"]
    C --> E[FormSection: title="Select Service and Time"]
    E --> F[FormField: select, name="service", label="Service", options=["Haircut - $25 (30 min)", "Beard Trim - $15 (15 min)"], placeholder="Choose a service"]
    E --> G[FormField: date, name="date", label="Date", min="today"]
    E --> H[FormField: time, name="time", label="Time", format="12h", step=900]
    E --> I[FormField: textarea, name="notes", label="Special Requests", placeholder="Any specific requests or notes?"]
    
    C --> J[FormSection: title="Your Information"]
    J --> K[FormRow: columns=2, gap="16px"]
    K --> L[FormColumn: span=1]
    L --> M[FormField: text, name="firstName", label="First Name", placeholder="John", required=true]
    K --> N[FormColumn: span=1]
    N --> O[FormField: text, name="lastName", label="Last Name", placeholder="Doe", required=true]
    J --> P[FormField: email, name="email", label="Email", placeholder="you@example.com", required=true]
    J --> Q[FormField: tel, name="phone", label="Phone", placeholder="(123) 456-7890", required=true]
    
    %% Booking Summary Section
    B --> R[Flex: direction="column", span=5]
    R --> S[Card: variant="elevated"]
    S --> T[Heading: level=3, text="Booking Summary"]
    S --> U[Divider:]
    S --> V[Stack: spacing="12px"]
    V --> W[Text: content="Haircut"]
    V --> X[Text: content="Sep 12, 2025 at 2:0 PM"]
    V --> Y[Text: content="John's Barber Shop"]
    S --> Z[Divider:]
    S --> AA[Flex: direction="row", justify="space-between"]
    AA --> AB[Text: content="Service Fee"]
    AA --> AC[Text: content="$25.00"]
    S --> AD[Flex: direction="row", justify="space-between"]
    AD --> AE[Text: content="Booking Fee"]
    AD --> AF[Text: content="$2.50"]
    S --> AG[Divider:]
    S --> AH[Flex: direction="row", justify="space-between"]
    AH --> AI[Text: content="Total"]
    AH --> AJ[Text: content="$27.50"]
    S --> AK[Button: variant="primary", block=true, text="Confirm Booking"]
    
